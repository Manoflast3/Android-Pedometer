<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="portrait"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.bluton.lab1.MainActivity"
        android:weightSum="1"
        android:id="@+id/whole">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/stepCount"
            android:layout_marginTop="72dp"
            android:textSize="80sp"
            android:typeface="monospace"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:textColor="#4f4f4f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Steps Detected."
            android:id="@+id/textView2"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:typeface="monospace"
            android:layout_below="@+id/stepCount"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView16"
            android:textColor="#000"
            android:layout_marginTop="249dp"
            android:text="Accelerometer Sensor"
            android:textAlignment="center"
            android:layout_below="@+id/start"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Current: "
            android:id="@+id/textView17"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_below="@+id/textView16"
            android:layout_toLeftOf="@+id/start"
            android:layout_toStartOf="@+id/start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(n/a, n/a, n/a)"
            android:id="@+id/accelerometerMax"
            android:textColor="#565656"
            android:textAlignment="center"
            android:layout_alignTop="@+id/textView19"
            android:layout_alignLeft="@+id/accelerometerCurrent"
            android:layout_alignStart="@+id/accelerometerCurrent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Max: "
            android:id="@+id/textView19"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_below="@+id/textView17"
            android:layout_toLeftOf="@+id/start"
            android:layout_toStartOf="@+id/start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(n/a, n/a, n/a)"
            android:id="@+id/accelerometerCurrent"
            android:textColor="#565656"
            android:textAlignment="center"
            android:layout_below="@+id/textView16"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="330dp"
            android:id="@+id/linear"
            android:layout_marginTop="73dp"
            android:layout_below="@+id/textView19"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView21"
            android:textColor="#000"
            android:text="Graph"
            android:textAlignment="center"
            android:layout_alignTop="@+id/linear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET COUNT!"
            android:id="@+id/start"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="START WALKING!"
            android:id="@+id/textView3"
            android:layout_marginTop="67dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:textColor="#111111"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:textAlignment="center" />
    </RelativeLayout>
</ScrollView>