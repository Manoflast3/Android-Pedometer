<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="portrait"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.bluton.lab1.MainActivity"
        android:weightSum="1"
        android:id="@+id/linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Light Sensor"
            android:id="@+id/textView"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Current Value: "
            android:id="@+id/textView2"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/textView6"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="n/a"
            android:id="@+id/lightCurrent"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:textColor="#565656" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Max Value: "
            android:id="@+id/textView23"
            android:layout_below="@+id/textView7"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="n/a"
            android:id="@+id/lightMax"
            android:layout_below="@+id/mfMax"
            android:layout_alignLeft="@+id/mfMax"
            android:layout_alignStart="@+id/mfMax"
            android:textColor="#565656" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Magnetic Field Sensor"
            android:id="@+id/textView6"
            android:textColor="#000"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Current Value: "
            android:id="@+id/textView7"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/textView6"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(n/a, n/a, n/a)"
            android:id="@+id/mfCurrent"
            android:layout_below="@+id/mfMax"
            android:layout_alignLeft="@+id/mfMax"
            android:layout_alignStart="@+id/mfMax"
            android:textColor="#565656" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Max Value: "
            android:id="@+id/textView9"
            android:layout_below="@+id/textView7"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(n/a, n/a, n/a)"
            android:id="@+id/mfMax"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:textColor="#565656" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rotation Vector Sensor"
            android:id="@+id/textView11"
            android:textColor="#000"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Current Value: "
            android:id="@+id/textView12"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/textView11"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(n/a, n/a, n/a)"
            android:id="@+id/rvCurrent"
            android:layout_alignTop="@+id/textView12"
            android:layout_alignLeft="@+id/mfCurrent"
            android:layout_alignStart="@+id/mfCurrent"
            android:textColor="#565656" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Max Value: "
            android:id="@+id/textView14"
            android:layout_below="@+id/textView12"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(n/a, n/a, n/a)"
            android:id="@+id/rvMax"
            android:layout_alignTop="@+id/textView14"
            android:layout_alignLeft="@+id/rvCurrent"
            android:layout_alignStart="@+id/rvCurrent"
            android:textColor="#565656" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView16"
            android:textColor="#000"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Accelerometer Sensor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Current Value: "
            android:id="@+id/textView17"
            android:textColor="#000"
            android:layout_below="@+id/textView16"
            android:layout_alignRight="@+id/textView14"
            android:layout_alignEnd="@+id/textView14"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(n/a, n/a, n/a)"
            android:id="@+id/accelerometerCurrent"
            android:textColor="#565656"
            android:layout_alignTop="@+id/textView17"
            android:layout_alignLeft="@+id/rvMax"
            android:layout_alignStart="@+id/rvMax" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Max Value: "
            android:id="@+id/textView19"
            android:textColor="#000"
            android:layout_below="@+id/textView17"
            android:layout_alignRight="@+id/textView17"
            android:layout_alignEnd="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(n/a, n/a, n/a)"
            android:id="@+id/accelerometerMax"
            android:textColor="#565656"
            android:layout_below="@+id/accelerometerCurrent"
            android:layout_alignLeft="@+id/accelerometerCurrent"
            android:layout_alignStart="@+id/accelerometerCurrent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="344dp"
            android:layout_height="99dp"
            android:layout_below="@+id/textView19"
            android:id="@+id/accelerometerGraph">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView21"
                android:textColor="#000"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/textView14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Graph" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>